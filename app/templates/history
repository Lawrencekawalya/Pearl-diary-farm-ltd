    <script>
      $(document).ready(function () {
        // Initialize DataTable
        $("#historyTable").DataTable({
          pageLength: 10,
          ordering: true,
          searching: true,
          lengthChange: true,
          info: true,
          order: [[3, "desc"]],
          dom: "Bfrtip",
          buttons: [
            { extend: 'copy', className: 'dt-button', text: '<i class="fas fa-copy"></i> Copy' },
            { extend: 'csv', className: 'dt-button', text: '<i class="fas fa-file-csv"></i> CSV' },
            { extend: 'excel', className: 'dt-button', text: '<i class="fas fa-file-excel"></i> Excel' },
            { extend: 'pdf', className: 'dt-button', text: '<i class="fas fa-file-pdf"></i> PDF' },
            { extend: 'print', className: 'dt-button', text: '<i class="fas fa-print"></i> Print' }
          ]
        });

        // Inject chart_data from Flask
        const chartData = {{ chart_data | tojson }};

        // === Line Chart: Milk Quality Over Time ===
        const qualityColors = chartData.map(b => {
          if (b.prediction_label === "High") return "#2ecc71";
          if (b.prediction_label === "Moderate") return "#f39c12";
          if (b.prediction_label === "Low") return "#e74c3c";
          return "#95a5a6";
        });

        new Chart(document.getElementById("milkChart"), {
          type: "line",
          data: {
            labels: chartData.map(b => b.date),
            datasets: [{
              label: "Milk Quality Score",
              data: chartData.map(b => b.prediction),
              borderColor: "#3498db",
              backgroundColor: "rgba(52, 152, 219, 0.1)",
              fill: true,
              tension: 0.3,
              pointRadius: 5,
              pointBackgroundColor: qualityColors,
              pointBorderColor: "#fff",
              pointBorderWidth: 2,
              pointHoverRadius: 7
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              tooltip: {
                callbacks: {
                  label: function(context) {
                    const batch = chartData[context.dataIndex];
                    return [
                      `Quality: ${batch.prediction_label}`,
                      `Collection Center: ${batch.collection_center}`,
                      `Collected: ${batch.date}`
                    ];
                  }
                }
              },
              legend: { position: 'top' }
            },
            scales: {
              y: {
                min: -0.2,
                max: 2.2,
                ticks: {
                  stepSize: 1,
                  callback: value => ["Low", "Moderate", "High"][value] || ""
                },
                title: { display: true, text: "Quality Rating" },
                grid: { color: "rgba(0, 0, 0, 0.05)" }
              },
              x: {
                title: { display: true, text: "Collection Date" },
                grid: { display: false }
              }
            }
          }
        });

        // === Bar Chart: District vs. Milk Output ===
        const districtData = {};
        chartData.forEach(b => {
          const district = b.district || "Unknown";
          const liters = parseFloat(b.liters_collected || 0);
          if (!districtData[district]) districtData[district] = 0;
          districtData[district] += liters;
        });

        const districtLabels = Object.keys(districtData);
        const litersValues = Object.values(districtData);

        new Chart(document.getElementById("districtChart"), {
          type: "bar",
          data: {
            labels: districtLabels,
            datasets: [{
              label: "Total Liters Collected",
              data: litersValues,
              backgroundColor: "#1abc9c",
              borderColor: "#16a085",
              borderWidth: 1,
              borderRadius: 6
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: { position: "top" },
              tooltip: {
                callbacks: {
                  label: context => `${context.parsed.y.toLocaleString()} liters`
                }
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                title: { display: true, text: "Liters Collected" },
                grid: { color: "rgba(0, 0, 0, 0.05)" }
              },
              x: {
                title: { display: true, text: "Districts" },
                grid: { display: false }
              }
            }
          }
        });
      });
    </script>
  </body>
